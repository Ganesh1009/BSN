{
  "name": "bionic-ai-chip-interface",
  "version": "0.4.2",
  "description": "BIONIC AI chip interface for controlling the full body BSN",
  "author": "Mathias Musahl",
  "private": true,
  "bin": "dist/main.js",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && ./create_certificates.sh",
    "build:prod": "NODE_OPTIONS=\"--max-old-space-size=8192\" nest build && ./create_certificates.sh",
    "package": "pkg .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.12",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.12",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.12",
    "@nestjs/swagger": "^4.7.12",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "fs": "0.0.1-security",
    "os": "^0.1.1",
    "passport": "^0.4.1",
    "passport-client-cert": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.12",
    "@types/express": "^4.17.11",
    "@types/jest": "25.1.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^13.13.41",
    "@types/passport-client-cert": "^2.1.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^25.5.4",
    "jest-junit": "^10.0.0",
    "pkg": "^4.4.9",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "pkg": {
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node14"
    ]
  }
}
